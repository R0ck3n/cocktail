{# templates/cocktail/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Cocktail{% endblock %}

{% block body %}
    <h1>Cocktail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cocktail.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cocktail.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ cocktail.createdAt ? cocktail.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>
                    <ul>
                        {% for ingredient in cocktail.ingredients %}
                            <li>{{ ingredient.name }}</li>
                        {% else %}
                            <li>No ingredients</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cocktail_index') }}">back to list</a>

    <a href="{{ path('app_cocktail_edit', {'id': cocktail.id}) }}">edit</a>

    {{ include('cocktail/_delete_form.html.twig') }}
{% endblock %}
